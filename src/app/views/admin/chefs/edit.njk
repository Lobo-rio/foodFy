{% extends "../layout.njk" %}
    
{% block styles %}
    <link rel="stylesheet" href="/admin/styles/chefs.css">
{% endblock styles %}

{% block main %}
    <section>
        <div class="container">
            <form action="/admin/chefs?_method=PUT" method="POST">
                <div class="title">
                    <h2>Editando chef</h2>
                    <div class="options">
                        <a href="/admin/chefs/{{chef.id}}/delete">Deletar</a>
                        <button type="submit" class="save">Salvar Chef</button>
                    </div>
                </div>
                <div class="item">
                    <div>Nome</div>
                    <div>
                        <input type="text" name="name" placeholder="Informe o nome do chef..." value="{{ chef.name }}" required>
                        <input type="hidden" name="id" value="{{ chef.id }}">
                    </div>
                </div>
                <div class="item">
                    <div>Avatar</div>
                    <div>
                        <input type="url" name="avatar" placeholder="Informe a url da com a foto do chef..." value="{{ chef.avatar }}" required>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock main %}