{% extends "../layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/admin/styles/recipes.css">
{% endblock styles %}

{% block main %}
    <section>
        <div class="container">
            <div class="title">
                <h2>Receita: {{ recipe.title }}</h2>
                <a href="/admin/recipes/{{recipe.id}}/edit" class="button save">Editar Receita</a>
            </div>
            <div class="information">
                <img src="{{ recipe.image }}" alt="Imagem da receita {{ recipe.title }}">
                <div class="title">
                    <h1>{{ recipe.title }}</h1>
                    <h4>por {{ recipe.chef }}</h4>
                </div>
                <div class="details">
                    <h2>Ingredientes</h2>
                    <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}
                    </ul>

                    <h2>Modo de preparo</h2>
                    <ol>
                    {% for preparation in recipe.preparation %}
                        <li>{{ preparation }}</li>
                    {% endfor %}
                    </ol>

                    <h2>Informações adicionais</h2>
                    <p>{{ recipe.information }}</p>
                </div>
            </div>
        </div>
    </section>
{% endblock main %}