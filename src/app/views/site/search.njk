{% extends "./layout.njk" %}

{% block title %}
    <title>Receitas - Foodfy Restaurante</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="styles/cards.css">
{% endblock styles %}

{% block main %}
    <div class="main">
        <h2>Buscado por: {{filter}}</h2>
        <div class="cards">
            {% for item in recipes %}
                <div class="card" id="{{ item.id }}">
                    <img src="{{ item.image }}" alt="imagem do {{ item.title }}">
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.chef }}</p>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock main %}

{% block scripts %}
    <script src="scripts/index.js"></script>
{% endblock scripts %}