{% extends "./layout.njk" %}

{% block title %}
    <title>{{ items.company }}</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="stylesheet" href="/styles/cards.css">
{% endblock styles %}

{% block main %}
    <div class="jumbotron">
        <div class="description">
            <h1>{{ items.description }}</h1>
            <p>{{ items.details }}</p>
        </div>
        <div class="image">
            <img src="{{ items.imageCheff }}" alt="Cheff">
        </div>
    </div>

    <div class="main">
        <h2>{{ items.mainTitleHome }}</h2>

        <div class="cards">
            {% for item in recipes %}
                <div class="card">
                    <img src="{{ item.cardImage }}" alt="imagem do {{ item.cardTitle }}">
                    <h3>{{ item.cardTitle }}</h3>
                    <p>{{ item.cardAuthor }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock main %}